
<%= form_for(@pet, as: :pet, url: pet_path(@pet)) do |f| %>

  <% if @pet.errors.any? %>
    <div id="error_explanation" class="alert-box alert radius" align="center">
      <h5><%= pluralize(@pet.errors.count, "error") %> prohibited your pet's info from being saved:</h5>

      <ul>
      <% @pet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="small-12 columns">
      <div class="field">
        <div align="center">
          <%= f.label :name %>
        </div>
        <%= f.text_field :name %>
      </div>
      <br />
      <div align="center">
        <div class="actions">
          <%= f.submit "Rename Pet", class: "button round" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
